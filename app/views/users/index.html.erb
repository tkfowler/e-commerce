<div class="landing-page">
	<div id="login">
		<% if flash[:errors] %>
			<p class="error"><%= flash[:errors] %></p>
		<% end %>
		<form class="form-inline login-form" action="/sessions" method="post">
		<h2 class="login-head">Login</h2>
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		  <div class="form-group">
		    <!-- <label for="exampleInputEmail1">Email address</label> -->
		    <input type="email" class="form-control" id="email" name="email" placeholder="Email">
		  </div>
		  <div class="form-group">
		    <!-- <label for="exampleInputPassword1">Password</label> -->
		    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
		  </div>
		  <button type="submit" class="btn btn-primary">Login</button>
		  </form>
	</div>
	<div id="reg">
	<% if flash[:reg_errors] %>
		<p class="error"><%= flash[:reg_errors] %></p>
	<% end %>
		<form action="/users" method="post">
			<h2>Register</h2>
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			  <div class="form-group">
			    <input type="text" class="form-control" id="first_name" name="user[first_name]" placeholder="First Name">
			  </div>
			   <div class="form-group">
			    <input type="text" class="form-control" id="last_name" name="user[last_name]" placeholder="Last Name">
			  </div>
			  <div class="form-group">
			    <input type="text" class="form-control" id="email" name="user[email]" placeholder="Email">
			  </div>
			  <div class="form-group">
			    <input type="password" class="form-control" id="password" name="user[password]" placeholder="Password">
			  </div>
			   <div class="form-group">
			    <input type="password" class="form-control" id="password" name="user[password_confirmation]" placeholder="Password Confirmation">
			  </div>
			  <button type="submit" class="btn btn-primary">Register</button>
		  </form>
	</div>
	<div id="logo-container">
		<h1 id="home-logo">BuyNow</h1>
	</div>
</div>